<%= form_tag "/shelters/#{@shelter.id}", method: :post do %>
  <%= label_tag :title %>
  <%= text_field_tag :title %>
  <%= label_tag :rating %>
  <%= select_tag :rating, options_for_select((1..5).to_a) %><br>
  <%= label_tag :content %>
  <%= text_field_tag :content %>
  <%= label_tag :image %>
  <%= text_field_tag :image %>
  <%= submit_tag "Submit" %>
<% end %>
